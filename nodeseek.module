#!name=NodeSeek Daily Check-in
#!desc=NodeSeek forum automatic daily check-in
#!author=Sliverkiss & Wells
#!homepage=https://github.com/wellsgz/Egern-module
#!icon=https://raw.githubusercontent.com/Sliverkiss/QuantumultX/main/icon/nodeseek.png

[Script]
# Cookie capture - use http-request to get Cookie header
nodeseek_cookie = type=http-request, pattern=^https:\/\/www\.nodeseek\.com, script-path=https://raw.githubusercontent.com/wellsgz/Egern-module/main/nodeseek_cookie.js, requires-body=false

# Daily check-in cron
nodeseek_checkin = type=cron, cronexp="* * * * *", script-path=https://raw.githubusercontent.com/wellsgz/Egern-module/main/nodeseek_checkin.js, timeout=30, wake-system=1

[MITM]
hostname = %APPEND% www.nodeseek.com
