#!name=NodeSeek Daily Check-in
#!desc=NodeSeek forum automatic daily check-in
#!author=Sliverkiss & Wells
#!homepage=https://github.com/wellsgz/Egern-module
#!icon=https://raw.githubusercontent.com/Sliverkiss/QuantumultX/main/icon/nodeseek.png

[Script]
# Cookie capture - triggers when viewing profile API
nodeseek_cookie = type=http-response, pattern=^https:\/\/www\.nodeseek\.com\/api\/account\/getInfo\/.+\?readme=1, script-path=https://raw.githubusercontent.com/wellsgz/Egern-module/main/nodeseek_cookie.js, requires-body=true

# Daily check-in cron (9 AM daily)
nodeseek_checkin = type=cron, cronexp="* * * * *", script-path=https://raw.githubusercontent.com/wellsgz/Egern-module/main/nodeseek_checkin.js

[MITM]
hostname = %APPEND% www.nodeseek.com
